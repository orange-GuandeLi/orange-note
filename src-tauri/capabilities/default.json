{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": ["main"],
    "permissions": [
        "core:default",
        "opener:default",
        "dialog:default",
        "fs:default",
        {
            "identifier": "fs:allow-read-text-file",
            "allow": [
                {
                    "path": "$HOME/**/*.md"
                }
            ]
        },
        {
            "identifier": "fs:allow-home-write",
            "allow": [
                {
                    "path": "$HOME/**/*.md"
                }
            ]
        },
        {
            "identifier": "fs:allow-read-dir",
            "allow": [
                {
                    "path": "$HOME/**/*"
                }
            ]
        }
    ]
}
